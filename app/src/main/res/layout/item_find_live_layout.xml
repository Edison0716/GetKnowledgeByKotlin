<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutwh_mw_v"
    android:paddingBottom="10dp">

    <RelativeLayout
        style="@style/layoutwh_mw"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/live"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/iv_live"
            android:text="直播未开始"
            android:textColor="@color/text_color"
            android:textSize="12dp"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="17234人预约"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_gray"/>

    <RelativeLayout
        style="@style/layoutwh_mw"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_live_title"
            style="@style/layoutwh_ww"
            android:text="何帆：特朗普访华，得到用户应该怎么看"
            android:textColor="@color/text_black_color"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_live_content"
            style="@style/layoutwh_ww"
            android:layout_below="@id/tv_live_title"
            android:layout_marginTop="10dp"
            android:text="三本书刷新你的中美关系认知"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>

        <ImageView
            style="@style/layoutwh_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right"
            />
    </RelativeLayout>
</LinearLayout>
