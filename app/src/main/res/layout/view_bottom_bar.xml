<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutwh_mw_h"
    android:layout_height="45dp">

    <RelativeLayout
        android:id="@+id/rl_find"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/find_unsel"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_find"
            style="@style/layoutwh_ww"
            android:layout_below="@id/iv_find"
            android:layout_marginTop="3dp"
            android:text="@string/home_find"
            android:textColor="@color/text_color"
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_today"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/study_unsel"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_today"
            style="@style/layoutwh_ww"
            android:layout_below="@id/iv_today"
            android:layout_marginTop="3dp"
            android:text="@string/home_today"
            android:textColor="@color/text_color"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_paid"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/find_unsel"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_paid"
            style="@style/layoutwh_ww"
            android:layout_below="@id/iv_paid"
            android:layout_marginTop="3dp"
            android:text="@string/home_paid"
            android:textColor="@color/text_color"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/find_unsel"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_mine"
            style="@style/layoutwh_ww"
            android:layout_below="@id/iv_mine"
            android:layout_marginTop="3dp"
            android:text="@string/home_mine"
            android:textColor="@color/text_color"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</LinearLayout>
