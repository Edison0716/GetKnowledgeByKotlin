<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutwh_mw_v"
    android:background="@color/white"
    android:paddingBottom="6dp">

    <RelativeLayout
        style="@style/layoutwh_mw"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:text="@string/find_free_area"
            android:textColor="@color/text_black_color"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_shap"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/right_triangle"/>

            <TextView
                style="@style/layoutwh_ww"
                android:layout_gravity="center_vertical"
                android:text="连续播放"
                android:textColor="@color/white"
                android:textSize="14dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_lixiang"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/lixiang"
            app:civ_border_width="0dp"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/civ_lixiang"
            android:text="李翔知识内参"
            android:textColor="@color/text_black_color"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_right"
            style="@style/layoutwh_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right"
            android:text="@string/show_all"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:overScrollMode="never"
        ></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_gray"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_pangzi"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/lixiang"
            app:civ_border_width="0dp"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/civ_pangzi"
            android:text="逻辑思维"
            android:textColor="@color/text_black_color"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_right1"
            style="@style/layoutwh_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right"
            />

        <TextView
            style="@style/layoutwh_ww"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right1"
            android:text="@string/show_all"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_ljsw"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_music_name"
            style="@style/layoutwh_ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="第383期 | 为什么会有20万人的经济学课堂"
            android:textSize="12dp"
            />
    </LinearLayout>
</LinearLayout>
